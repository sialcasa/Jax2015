<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.saxsys.javafx.jumpstart.createperson.CreatePersonView">
   <children>
      <GridPane hgap="5.0" vgap="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
          <ColumnConstraints hgrow="ALWAYS" />
          <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Vorname" />
            <Label maxWidth="-Infinity" minWidth="-Infinity" text="Nachname" GridPane.rowIndex="1" />
            <TextField fx:id="tf_firstname" GridPane.columnIndex="1" />
            <TextField fx:id="tf_surname" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="btn_addPerson" mnemonicParsing="false" onAction="#addButtonPressed" text="Ok" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
